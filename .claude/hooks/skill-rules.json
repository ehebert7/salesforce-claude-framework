          "(bulkify|refactor).*?(code|trigger|class)",
          "(review|check).*?(apex|code)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "force-app/**/classes/**/*.cls",
          "force-app/**/triggers/**/*.trigger",
          "**/classes/*.cls",
          "**/triggers/*.trigger"
