{
  "_readme": "This file configures auto-detection triggers for your installed skills. Run /setup to configure automatically, or edit manually.",
  "_format": {
    "type": "domain | workflow | utility",
    "enforcement": "suggest | require",
    "priority": "high | medium | low",
    "promptTriggers.keywords": "Words that trigger this skill",
    "promptTriggers.intentPatterns": "Regex patterns for intent matching",
    "fileTriggers.pathPatterns": "Glob patterns for file paths",
    "fileTriggers.contentPatterns": "Regex patterns for file content"
  },
  "skills": {
    "_example-skill": {
      "_comment": "This is an example. Replace with your actual skills.",
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": ["example", "keyword"],
        "intentPatterns": ["(create|build).*example"]
      },
      "fileTriggers": {
        "pathPatterns": ["**/*.example"],
        "contentPatterns": ["ExampleClass"]
      }
    },
    "apex-best-practices": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "apex", "trigger", "class", "test class", "batch", "queueable",
          "schedulable", "future", "soql", "sosl", "dml", "governor limits",
          "bulkification", "selector", "domain", "service layer"
        ],
        "intentPatterns": [
          "(create|add|build|write).*?(trigger|class|batch|test)",
          "(fix|debug|optimize).*?(apex|query|trigger)",
          "(bulkify|refactor).*?(code|trigger|class)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "force-app/**/classes/**/*.cls",
          "force-app/**/triggers/**/*.trigger"
        ],
        "contentPatterns": [
          "public class",
          "trigger.*on.*\\("
        ]
      }
    },
    "lwc-dev-guidelines": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "lwc", "lightning web component", "component", "wire",
          "lightning-", "slds", "@api", "@track", "connectedCallback"
        ],
        "intentPatterns": [
          "(create|add|build).*?(component|lwc|lightning)",
          "(how to|best practice).*?(lwc|wire|component)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "force-app/**/lwc/**/*.js",
          "force-app/**/lwc/**/*.html"
        ],
        "contentPatterns": [
          "import.*from 'lwc'",
          "LightningElement"
        ]
      }
    },
    "salesforce-flow-architect": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "flow", "screen flow", "record-triggered", "autolaunched",
          "subflow", "flow variable", "decision element", "get records"
        ],
        "intentPatterns": [
          "(create|build|design).*?(flow|automation)",
          "(debug|fix|troubleshoot).*?flow"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "force-app/**/flows/**/*.flow-meta.xml"
        ],
        "contentPatterns": [
          "<Flow xmlns"
        ]
      }
    },
    "salesforce-cli": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "sf", "sfdx", "cli", "deploy", "retrieve", "push", "pull",
          "scratch org", "sandbox", "package", "metadata"
        ],
        "intentPatterns": [
          "(deploy|push|pull|retrieve).*?(org|sandbox|metadata)",
          "(create|generate).*?(package|scratch)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/sfdx-project.json",
          "**/package.xml"
        ],
        "contentPatterns": []
      }
    },
    "agentforce": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "agentforce", "service agent", "agent", "topic", "action",
          "copilot", "einstein", "bot", "grounding", "knowledge"
        ],
        "intentPatterns": [
          "(create|build|configure|setup).*?agent",
          "(debug|troubleshoot|fix).*?agent",
          "(test|optimize).*?agent"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "force-app/**/bots/**",
          "force-app/**/genAiPlugins/**"
        ],
        "contentPatterns": [
          "<Bot xmlns",
          "<GenAiPlugin"
        ]
      }
    },
    "salesforce-integration-patterns": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "medium",
      "promptTriggers": {
        "keywords": [
          "callout", "http", "rest", "soap", "api", "integration",
          "named credential", "external service", "platform event"
        ],
        "intentPatterns": [
          "(create|build|make).*?(callout|integration|api)",
          "(connect|integrate).*?(external|api|system)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "force-app/**/namedCredentials/**",
          "force-app/**/externalServices/**"
        ],
        "contentPatterns": [
          "HttpRequest",
          "HttpResponse"
        ]
      }
    }
  }
}
